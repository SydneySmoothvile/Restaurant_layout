<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DessertRecipeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/text_introPastries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pastry_recipes"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/purple_200"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/text_browse_pastries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/browse_pastries"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_introPastries"
        android:textColor="@color/teal_700"
        android:textStyle="italic"
        android:textSize="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_pastries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_browse_pastries"/>

</RelativeLayout>